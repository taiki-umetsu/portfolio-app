#comment-wrap
  .wrapper-sm.shadow-sm class="comment#{comment.id}"
    .container
      .row.d-flex.align-items-center
        = image_tag user_icon(comment.user), class:'user-icon'
        #user-name
          =comment.user.name
        #comment-time
          time.text-muted[datetime="#{comment.created_at}"] #{time_ago_in_words(comment.created_at)}Ââç
        - if comment_user?(comment)
          #icon-delete
            =link_to comment_path(comment), method: :delete, data: { confirm: "You sure?" } do
              =icon 'far', 'trash-alt fa-x'
      .row#comment-content
          .text-break=comment.content